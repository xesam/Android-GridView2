<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="RFC规范场景演示"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 当前场景 -->
        <TextView
            android:id="@+id/scenario_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/demo_info_background"
            android:padding="12dp"
            android:text="选择下方场景开始测试"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 测试图片 -->
        <cn.net.chelaile.android.components.remote.RemoteImageView
            android:id="@+id/test_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop" />

        <!-- 状态显示 -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/demo_info_background"
            android:padding="12dp"
            android:text="准备就绪"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- 场景按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- 场景1：相同成功图片缓存 -->
            <Button
                android:id="@+id/btn_scenario1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="场景1.1：相同成功图片缓存" />

            <!-- 场景2：相同URL加载失败重试 -->
            <Button
                android:id="@+id/btn_scenario2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="场景1.2：相同URL加载失败重试" />

            <!-- 场景3：不同成功图片替换 -->
            <Button
                android:id="@+id/btn_scenario3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="场景1.3：不同成功图片替换" />

            <!-- 场景4：相同URL进行中请求 -->
            <Button
                android:id="@+id/btn_scenario4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="场景1.4：相同URL进行中请求" />

            <!-- 场景5：不同URL进行中请求替换 -->
            <Button
                android:id="@+id/btn_scenario5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="场景1.5：不同URL进行中请求替换" />

            <!-- 场景6：URL匹配验证 -->
            <Button
                android:id="@+id/btn_scenario6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="场景3.1：URL匹配验证" />

        </LinearLayout>

        <!-- 场景说明 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/demo_info_background"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="RFC规范场景说明："
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 场景1.1：测试已加载成功图片的URL缓存机制"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 场景1.2：测试加载失败后的重试机制"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 场景1.3：测试不同URL的替换机制"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 场景1.4：测试进行中请求的相同URL处理"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 场景1.5：测试进行中请求的不同URL替换"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 场景3.1：测试延迟响应的URL匹配验证"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>